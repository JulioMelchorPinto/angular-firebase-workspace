{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [ {
    "site": "jmelchorp-bootstrap",
    "public": "dist/af-bootstrap",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "dist/af-bootstrap/index.html"
      }
    ]
  },{
    "site": "jmelchorp-layout",
    "public": "dist/af-layout",
