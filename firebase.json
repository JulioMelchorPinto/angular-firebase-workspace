      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "dist/af-covid/index.html"
      }
    ]
  },{
    "site": "jmelchorp-material",
    "public": "dist/af-material",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
